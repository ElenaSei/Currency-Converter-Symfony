{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <section class="wrap">
            <h1>Currency Converter</h1>
            <div class="input-wrap">
                <div class="inner-wrap">
                    <form method="post">
                        {#{{ form_widget(form.amount, { 'attr':{'id': 'amount_form'} }) }}#}
                        {#{{ form_widget(form.currencyFrom, { 'attr':{'id': 'amount_form'} }) }}#}
                        {#{{ form_widget(form.currencyTo, { 'attr':{'id': 'amount_form'} }) }}#}
                        <input type="number" step="0.01" name="amount" value="Amount">
                        <select name="currFrom">
                            {% for rate in rates %}
                                <option value="{{ rate.getRateName }}">{{ rate.getRateName }}</option>
                            {% endfor %}
                        </select>
                        <select name="currTo">
                            {% for rate in rates %}
                                <option value="{{ rate.getRateName }}">{{ rate.getRateName }}</option>
                            {% endfor %}
                        </select>
                        <input class="submit" type="submit" name="submit" value="CONVERT">
                    </form>
                    <div class="result">
                        {% if result is not empty %}
                            {{ result }}
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="table-wrap">
                <table>
                    <tr>
                        <th></th>
                        <th>EUR</th>
                        <th>USD</th>
                        <th>GBP</th>
                        <th>BGN</th>
                        <th>AUD</th>
                    </tr>
                    <tr>
                        <td>EUR</td>
                        <td>1.0000</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>USD</td>
                        <td></td>
                        <td>1.0000</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>GBP</td>
                        <td></td>
                        <td></td>
                        <td>1.0000</td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>BGN</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>1.0000</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>AUD</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>1.0000</td>
                    </tr>
                </table>
            </div>
        </section>
    </div>
{% endblock %}
