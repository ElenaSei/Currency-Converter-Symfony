{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <section class="wrap">
            <h1>Currency Converter</h1>
            <div class="input-wrap">
                <div class="inner-wrap">
                    <form method="post">
                        <input type="number" step="0.01" name="amount" value="Amount">
                        <select name="currFrom">
                            {% for rate in rates %}
                                <option value="{{ rate.getRateName }}">{{ rate.getRateName }}</option>
                            {% endfor %}
                        </select>
                        <select name="currTo">
                            {% for rate in rates %}
                                <option value="{{ rate.getRateName }}">{{ rate.getRateName }}</option>
                            {% endfor %}
                        </select>
                        <input class="submit" type="submit" name="submit" value="CONVERT">
                    </form>
                    <div class="result">
                        {% if result is not empty %}
                            {{ result }}
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="table-wrap">
                <table>
                    <tr>
                        <th></th>
                        {% for rate in top5rates %}
                            <th>{{ rate.getRateName }}</th>
                        {% endfor %}
                    </tr>
                    {% for rate in top5rates %}
                        <tr>
                            <th>{{ rate.getRateName }}</th>
                            {% for innerRate in rate.getRates %}
                                <td>{{ innerRate.getRateExchange }}</td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </section>
    </div>
{% endblock %}
